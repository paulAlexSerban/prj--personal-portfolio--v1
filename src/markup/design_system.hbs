                            <span class="skill-item expert">Node.js</span>
                            <span class="skill-item expert">AWS</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline Pattern -->
            <div class="pattern-card">
                <h4>Timeline</h4>
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-date">2023</div>
                        <div class="timeline-content">
                            <h3>Senior Developer</h3>
                            <p>Led team of 5 developers on major project</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-date">2022</div>
                        <div class="timeline-content">
                            <h3>Full Stack Developer</h3>
                            <p>Built multiple web applications</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

