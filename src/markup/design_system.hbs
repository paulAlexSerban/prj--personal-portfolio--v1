<!-- Patterns Section -->
<section id="patterns" class="section-padding" style="background: var(--secondary-bg);">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">// ui_patterns</h2>
            <div class="section-line"></div>
        </div>

        <div class="patterns-grid">
            <!-- Terminal Pattern -->
            <div class="pattern-card">
                <h4>Terminal Interface</h4>
                <div class="terminal" style="max-width: 100%;">
                    <div class="terminal-header">
                        <div class="terminal-buttons">
