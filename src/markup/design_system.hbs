                            <span class="minimize"></span>
                            <span class="maximize"></span>
                        </div>
                        <div class="terminal-title">terminal â€” design-system â€” 80Ã—24</div>
                    </div>
                    <div class="terminal-body">
                        <div class="terminal-line">
                            <span class="prompt">user@design-system:~$</span>
                            <span class="command">showcase patterns</span>
                        </div>
                        <div class="terminal-output">
                            <p>> Displaying UI patterns and components</p>
                            <p>> All elements are fully responsive</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Competency Matrix Pattern -->
            <div class="pattern-card">
                <h4>Competency Matrix</h4>
                <div class="competency-matrix" style="padding: 1rem;">
                    <div class="matrix-domain active">
                        <div class="field-card">
                            <h4 class="field-title">Frontend Development</h4>
                            <div class="categories-list">
                                <div class="category-item">
                                    <span class="category-name">Rendering</span>
                                    <div class="subjects-grid">
                                        <div class="subject-item" data-proficiency="8">
                                            <span>React</span>
                                            <div class="subject-proficiency"></div>
                                        </div>
                                        <div class="subject-item" data-proficiency="7">
                                            <span>Vue.js</span>
                                            <div class="subject-proficiency"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Skill Cloud Pattern -->
            <div class="pattern-card">
                <h4>Skill Cloud</h4>
                <div class="competencies-grid" style="grid-template-columns: 1fr;">
                    <div class="competency-category">
                        <h3 class="category-title">
                            <span class="category-icon">ðŸš€</span>
