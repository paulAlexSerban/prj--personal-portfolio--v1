  <div class="terminal__base">
    <link rel="stylesheet" href="terminal.css" />
    <div class="terminal__header">
      <div class="terminal__buttons">
        <span class="close"></span>
        <span class="minimize"></span>
        <span class="maximize"></span>
      </div>
      <div class="terminal__title">terminal — zsh — 80x24</div>
    </div>
    <div class="terminal__body">
      <div class="terminal__line">
        <span class="prompt">visitor@portfolio:~$</span>
        <span class="command">cat about_me.txt</span>
      </div>
      <div class="terminal__output">
        <h1 class="typing-text">{{page.hero.title}}</h1>
        <p class="typing-text delay-1">{{page.hero.subtitle}}</p>
        <div class="typing-text delay-2">
          {{#each page.hero.description}}
            <p>> {{this}}</p>
          {{/each}}
        </div>
      </div>
      <div class="terminal__line">
        <span class="prompt">visitor@portfolio:~$</span>
        <span class="cursor">|</span>
      </div>
    </div>
  </div>