                font-size: 2rem;
            }

            .hero-content {
                flex-direction: column;
            }

            .hero-text {
                padding-right: 0;
                margin-bottom: 40px;
                text-align: center;
            }

            .cta-buttons {
                justify-content: center;
            }
        }

        @media (max-width: 768px) {
            .navbar {
                padding: 15px 0;
            }

